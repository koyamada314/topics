<div class="container">
<!-- トピックページ -->
<!-- トピックカード -->
<div class="row">
        <div class="col s12 m20">
          <div class="card">
            <div class="card-content">
              <span class= "card-title"><%= @topic.title%></span>
              <span>投稿者：</span><%= @topic.user.nickname %>
              <%= simple_format(@topic.text) %>
            </div>
            <% if user_signed_in? %>
            <div class="card-action">
              <%= link_to new_topic_comment_path(@topic.id), method: :get do %>
              <li>コメントする</li>
              <% end %>
              <% if current_user.id == @topic.user_id %>
                <%= link_to "/topics/#{@topic.id}", method: :delete do %>
                <li>この記事を削除する</li>
                <% end %>
                <%= link_to "/topics/#{@topic.id}/edit", method: :get do %>
                <li>この記事を編集する</li>
                <% end %>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>

<!-- コメントカード -->
  <% if @comments %>
    <% @comments.each do |comment| %>
      <div class="row">
        <div class="col s12 m20">
          <div class="card">
            <div class="card-content">
              <p><%= comment.user.nickname %></p>
              <%= simple_format(comment.comment) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
